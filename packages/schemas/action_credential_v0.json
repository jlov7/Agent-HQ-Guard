{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agent-hq-guard.dev/schemas/action_credential_v0.json",
  "title": "Agent HQ Guard Action Credential",
  "description": "Signed manifest for Agent HQ Guard compatible actions (A2PA v0).",
  "type": "object",
  "required": [
    "version",
    "run_id",
    "repository",
    "workflow",
    "agents",
    "decisions",
    "budgets",
    "artifacts",
    "signatures"
  ],
  "properties": {
    "version": {
      "type": "string",
      "enum": ["0.1.0"]
    },
    "run_id": {
      "type": "string",
      "description": "Unique identifier for a mission-control run."
    },
    "repository": {
      "type": "object",
      "required": ["owner", "name", "ref", "commit"],
      "properties": {
        "owner": { "type": "string" },
        "name": { "type": "string" },
        "ref": { "type": "string" },
        "commit": { "type": "string", "pattern": "^[0-9a-f]{40}$" }
      },
      "additionalProperties": false
    },
    "workflow": {
      "type": "object",
      "required": ["name", "run_number", "trigger"],
      "properties": {
        "name": { "type": "string" },
        "run_number": { "type": "integer", "minimum": 1 },
        "trigger": { "type": "string" }
      },
      "additionalProperties": false
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "provider", "capabilities"],
        "properties": {
          "id": { "type": "string" },
          "provider": { "type": "string" },
          "capabilities": {
            "type": "array",
            "items": { "type": "string" }
          },
          "tools": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "status", "details"],
        "properties": {
          "type": { "type": "string" },
          "status": { "type": "string", "enum": ["allow", "deny", "warn"] },
          "details": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "budgets": {
      "type": "object",
      "required": ["tokens", "currency"],
      "properties": {
        "tokens": { "type": "integer", "minimum": 0 },
        "currency": {
          "type": "object",
          "required": ["amount", "units"],
          "properties": {
            "amount": { "type": "number", "minimum": 0 },
            "units": { "type": "string", "enum": ["USD"] }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "sha256", "bindings"],
        "properties": {
          "name": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "bindings": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "value"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["embedded", "soft"]
                },
                "value": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "manifest": {
            "type": "object",
            "required": ["type", "reference"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["c2pa", "sigstore", "in-toto"]
              },
              "reference": { "type": "string", "format": "uri" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["issuer", "timestamp", "signature", "rekor_entry"],
        "properties": {
          "issuer": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "signature": { "type": "string" },
          "rekor_entry": { "type": "string", "format": "uri" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
