  "dependencies": {
    "@agent-hq-guard/policy": "workspace:*",
    "@agent-hq-guard/provenance": "workspace:*",
    "@probot/adapter-aws-lambda-serverless": "^2.0.0",
    "adm-zip": "^0.5.10",
    "probot": "^13.0.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.6",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@types/sqlite3": "^3.1.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
  }
}
