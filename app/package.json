{
  "name": "@agent-hq-guard/app",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --tsconfig tsconfig.json && tsc --project tsconfig.json --emitDeclarationOnly",
    "dev": "probot run ./dist/index.js",
    "lint": "eslint --max-warnings=0 \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "vitest run --coverage",
    "typecheck": "tsc --project tsconfig.json --noEmit"
